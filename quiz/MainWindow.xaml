<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="quiz.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MainWindow">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="1920" Height="1080">

            <!-- Start Screen -->
            <Grid x:Name="startGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left side with title and subtitle images -->
                <StackPanel Grid.Column="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Spacing="30">
                    <Image Source="Assets/escaperoom.png"
                       Width="700"
                       Height="450"
                       Stretch="Uniform"/>

                    <Image Source="Assets/quote.png"
                       Width="550"
                       Height="320"
                       Stretch="Uniform"
                       Margin="0,-150,0,0"/>

                    <Button x:Name="btnStart"
                        Content="START"
                        Click="btnStart_Click"
                        Width="250"
                        Height="70"
                        Margin="0,-150,0,0"
                        Background="#FF6C6C"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Bold"
                        BorderThickness="0"
                        CornerRadius="35"
                        HorizontalAlignment="Center"
                        Canvas.ZIndex="100"/>
                </StackPanel>

                <!-- Right side key image -->
                <Image Grid.Column="1"
                   Source="Assets/door.png"
                   Width="1000"
                   Height="1000"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,50,0"/>
            </Grid>

            <!-- Quiz Screen -->
            <StackPanel x:Name="gameGrid" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Spacing="30" 
                    Visibility="Collapsed">

                <!-- Question -->
                <Border Background="#DC143C" 
                    CornerRadius="20" 
                    Padding="20"
                    Width="600"
                    Height="80"
                    Margin="0,0,0,-100">
                    <TextBlock x:Name="txtQuestion"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#FDEBD0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Border>

                <!-- Images Row -->
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="40">
                    <Image x:Name="questionImage" 
                       Width="600" 
                       Height="500"/>
                </StackPanel>

                <!-- Email Grid -->
                <Grid x:Name="emailGrid" 
                  Visibility="Collapsed" 
                  Margin="0,50,0,0">
                    <Border Background="#F75270"
                        CornerRadius="20"
                        Width="600">
                        <Grid Margin="20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="thunguyendoanxuan0405@gmail.com"
                                   Foreground="#FDEBD0"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>

                            <Button Grid.Column="1"
                                Content="Copy"
                                Background="White"
                                Foreground="#DC143C"
                                Padding="15,10"
                                CornerRadius="10"
                                Click="CopyEmail_Click"
                                Margin="15,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Input Row -->
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="40" 
                        Margin="0,-40,0,0">
                    <TextBox x:Name="txt1" Width="80" Height="80" MaxLength="1" FontSize="36"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         Background="#FF6C6C" BorderThickness="0" CornerRadius="20"/>
                    <TextBox x:Name="txt2" Width="80" Height="80" MaxLength="1" FontSize="36"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         Background="#FF6C6C" BorderThickness="0" CornerRadius="20"/>
                    <TextBox x:Name="txt3" Width="80" Height="80" MaxLength="1" FontSize="36"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         Background="#FF6C6C" BorderThickness="0" CornerRadius="20"/>
                    <TextBox x:Name="txt4" Width="80" Height="80" MaxLength="1" FontSize="36"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         Background="#FF6C6C" BorderThickness="0" CornerRadius="20"/>
                    <TextBox x:Name="txt5" Width="80" Height="80" MaxLength="1" FontSize="36"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         Background="#FF6C6C" BorderThickness="0" CornerRadius="20"/>
                </StackPanel>

                <!-- Submit Button Row -->
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,-5,0,40">
                    <Button x:Name="btnSubmit"
                        Click="btnSubmit_Click"
                        Content="Submit"
                        Width="480" Height="80"
                        Background="#DC143C"
                        Foreground="White"
                        FontSize="32"
                        BorderThickness="0"
                        CornerRadius="20"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="txtError"
                       Text="Uncorrect!"
                       Foreground="#DC143C"
                       FontSize="25"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Height="30"
                       Margin="0,-60,0,0"
                       Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
